<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
	<div class="span8">
		<% if @user.microposts.any? %>
	  	<h3>Microposts (<%= @user.microposts.count %>)</h3>
	    <table>
				<tr>
					<td>Artist</td>
					<td>Track</td>
					<td>Posted</td>
				</tr>
				<tr><%= render @microposts %></tr>
	    <%= will_paginate @microposts %>
	  <% end %>
	</div>
</div>