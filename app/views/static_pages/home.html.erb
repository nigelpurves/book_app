<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
	<div class="span8 hometracks">
		<% if current_user.microposts.any? %>
	  	<br />
			<h3>Tracks (<%= current_user.microposts.count %>)</h3>
			<br />
	    <table class="table table-striped">
				<tr>
					<td class="micropost">
						<h3>Artist</h3>
					</td>
					<td class="micropost">
						<h3>Track</h3>
					</td>
					<td class="miropost">
						<h3>Posted</h3>
					</td>
					<td class="miropost">
						<h3>iTunes?</h3>
					</td>
				</tr>
				<tr><%= render @microposts %></tr>
	    </table>
		<%= will_paginate @microposts %>
	  <% end %>
	</div>
	</div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Qusic</h1>

    <h2>
      Keeping track of your favourite tracks!
    </h2>
		<br />
		<div class="row welcome-explain">
			<div class="span5">
				<h3>1. Tell us what song you've found</h3>
			</div>
		
			<div class="span5">
				<h3>2. We'll tell you when you can buy it</h3>
			</div>
		</div>
		<div class="row"></div>
		<div class="row">
			<div>
				<%= link_to "Sign up now!", signup_path, 
                              	class: "btn btn-large btn-primary" %>
			</div>
		</div>
	</div>
<% end %>